            <!-- Image Gallery Start -->
            <div class="container bg-white py-5 px-2">
                <div class="row image-gallery">
                    <?php
                    $imageDir = "img/gallery";
                    $allowedExtensions = array("jpg", "jpeg", "png", "gif");

                    $files = scandir($imageDir);
                    $images = array();

                    foreach ($files as $file) {
                        $fileInfo = pathinfo($file);
                        if (isset($fileInfo['extension']) && in_array(strtolower($fileInfo['extension']), $allowedExtensions)) {
                            $images[] = $imageDir . "/" . $file;
                        }
                    }

                    if (empty($images)) {
                        echo "<p>Inga bilder hittades i galleriet.</p>";
                    } else {
                        foreach ($images as $index => $image) : ?>
                            <div class="col-lg-4 col-md-6 gallery-item">
                                <a href="#" class="gallery-link" data-index="<?php echo $index; ?>"
                                    data-src="<?php echo $image; ?>">
                                    <img src="<?php echo $image; ?>" alt="Beskrivande bildtext här">
                                </a>
                            </div>
                        <?php endforeach;
                    }
                    ?>
                </div>
            </div>
            <!-- Image Gallery End -->

